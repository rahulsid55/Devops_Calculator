pipeline {
    environment {
        dockerImage = ""
    }
    agent any
        stages {
            stage('Step 1 Git Clone') {
                steps {
                    git branch: 'master', url: 'https://github.com/rahulsid55/Devops_Calculator.git'
                }
            }
            stage('Step 2 Maven Install') {
                steps {
                    sh 'mvn clean package'
                }
            }
            stage('Step 3 Build docker image') {
                steps {
                    script {
                        dockerImage = docker.build "rahulsid532/calculator_devops"
                    }
                }
            }
            stage('Step 4 Push docker image to hub') {
                steps {
                    script {
                        docker.withRegistry('', 'dockerhub_id') {
                            dockerImage.push()
                        }
                    }
                }
            }
            stage('Step 5 Ansible') {
                steps {
                    ansiblePlaybook colorized: true,
                    disableHostKeyChecking: true,
                    installation: 'Ansible',
                    inventory: './deployment/inventory',
                    playbook: './deployment/deploy.yml'
                }
            }
        }
       }